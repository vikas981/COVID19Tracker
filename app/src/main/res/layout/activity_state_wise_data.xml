<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/activity_state_wise_swipe_refresh_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/bg" android:layout_width="match_parent" android:layout_height="match_parent">
        <EditText android:textColor="#000000" android:textColorHint="@color/gray" android:id="@+id/activity_state_wise_search_editText" android:background="@drawable/edit_text_bg" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="5dp" android:hint="Search" android:maxLines="1" android:singleLine="true" android:drawablePadding="10dp" android:inputType="textCapWords" android:drawableStart="@drawable/search_icon" android:paddingStart="10dp"/>
        <androidx.cardview.widget.CardView android:id="@+id/activity_state_wise_title_card" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" app:cardCornerRadius="4dp">
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:paddingLeft="6dp" android:paddingTop="10dp" android:paddingRight="6dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3">
                <TextView
                    android:textSize="20sp"
                    android:fontFamily="@font/graphikregular"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:gravity="start" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="State" android:lines="1" android:layout_weight="2"/>
                <TextView
                    android:textSize="20sp"
                    android:fontFamily="@font/graphikregular"
                    android:textColor="@color/abc_search_url_text_pressed"
                    android:ellipsize="end" android:gravity="start" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total Cases" android:lines="1" android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/activity_state_wise_recyclerview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
